{
  "manifest_version": 3,
  "name": "IMDb to Letterboxd",
  "version": "1.1.0",
  "description": "Redirect from IMDb movie page to corresponding Letterboxd page.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://www.imdb.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Go to the Letterboxd page"
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  }
}
